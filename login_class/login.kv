#:set primary_color (94/255, 53/255, 177/255, 1)
<ReplicableTextField@CommonTextField>:

<CommonTextField@MDTextField>:
    size_hint: 0.75, 0.1
    multiline: False
    required: True
    max_text_length: 32
    line_color_normal: primary_color
    color_mode: 'custom'
    line_color_focus: primary_color

<Login>:
    user_input: user_input
    password_input: password_input
    keepOpen: keepOpen
    ck_keepOpen:ck_keepOpen
    newPass:newPass
    BoxLayout:
        orientation: 'vertical'
        rows: 2
        size: root.size
        padding: "20sp"
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'bottom'
            size_hint : (1, .22)
            MDLabel:
                font_size: "280sp"
                text:'A'
                halign:'center'
                font_name: './assets/fonts/guazuapp2.ttf'
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            size_hint : (1, .85)
            BoxLayout:
                orientation:'vertical'
                size_hint_y: .9
                size_hint_x: .95
                size_hint_min_x: 250
                size_hint_min_y: 450
                size_hint_max_x: 525
                size_hint_max_y: 500
                spacing: 30
                MDCard:
                    padding:20
                    elevation: 0
                    BoxLayout:
                        orientation:'vertical'
                        padding: 10
                        spacing: 30
                        MDLabel:
                            size_hint_y:.12
                            text:'Inicio'
                            font_name: './assets/fonts/Ubuntu-Medium.ttf'
                            font_style:"H5"
                            halign:'center'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color
                        MDTextField:
                            size_hint_x: 1
                            id: user_input
                            write_tab: False
                            hint_text: "Cuenta o email"
                        MDTextField:
                            size_hint_x: 1
                            id: password_input
                            write_tab: False
                            hint_text: "Contraseña"
                            password:True

                        BoxLayout:
                            size_hint_y:.12
                            orientation: 'horizontal'
                            rows: 2
                            MDCheckbox:
                                id: ck_keepOpen
                                pos_hint: {'center_x': 0, 'center_y': 1}

                                size_hint: None, None
                                size: "28sp", "28sp"
                                active: False
                            MDTextButton:
                                pos_hint: {'center_x': 0, 'center_y': 1}
                                id: keepOpen
                                text: "Auto inicio"
                        MDRaisedButton:
                            text: 'Ingresar'
                            size_hint_x : 1
                            on_press: root.go_in()
                        MDTextButton:
                            id: newPass
                            text: "¿ Olvidaste tu contraseña ?"
                        MDTextButton:
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            text: 'Registrarse'
                            font_name: './assets/fonts/Ubuntu-Medium.ttf'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color
                            on_release:root.go_to_register()





