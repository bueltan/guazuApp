
<Register>:
    name: name_input
    user: user_input
    password: password_input
    email : email_input
    second_password : second_password_input
    BoxLayout:
        orientation: 'vertical'
        rows: 2
        size: root.size
        padding: "20dp"
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'bottom'
            size_hint : (1, .22)
            MDLabel:
                font_size: "300sp"
                text:'B'
                halign:'center'
                valign: 'bottom'
                font_name: './assets/fonts/guazuapp2.ttf'
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color

        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            size_hint : (1, .85)
            BoxLayout:
                orientation:'vertical'
                size_hint_y: 1
                size_hint_x: 1
                size_hint_min_x: 250
                size_hint_min_y: 500
                size_hint_max_x: 700
                size_hint_max_y: 700
                spacing: 30
                MDCard:
                    elevation: .0
                    padding:20
                    BoxLayout:
                        orientation:'vertical'
                        padding: 10
                        spacing: 20
                        MDLabel:
                            text:'Crear una cuenta en GuazuApp'
                            font_style:"H5"
                            halign:'center'
                            valign: 'top'
                            font_name: './assets/fonts/Ubuntu-Medium.ttf'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color

                        MDTextField:
                            id: name_input
                            size_hint_x: 1
                            write_tab: False
                            hint_text:'Tú nombre'

                        MDTextField:
                            id: user_input
                            size_hint_x: 1
                            write_tab: False
                            hint_text:'Nombre de cuenta'

                        MDTextField:
                            id: password_input
                            size_hint_x: 1
                            write_tab: False
                            hint_text: "Contraseña"
                            password:True
                            max_text_length: 15
                        MDTextField:
                            id: second_password_input
                            size_hint_x: 1
                            write_tab: False
                            hint_text: "Repetir contraseña"
                            password:True
                            max_text_length: 15
                        MDTextField:
                            id: email_input
                            size_hint_x: 1
                            write_tab: False
                            hint_text: "Email"

                        MDRaisedButton:
                            text: 'Crear cuenta'
                            size_hint_x : 1
                            on_press: root.to_create_account()

                        MDTextButton:
                            text: 'Inicio'
                            font_name: './assets/fonts/Ubuntu-Medium.ttf'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            on_release:root.go_to_login()




