
<Register>:
    name: name_input
    user: user_input
    password: password_input
    email : email_input
    second_password : second_password_input
    BoxLayout:
        orientation: 'vertical'
        rows: 1
        size: root.size
        padding: "10dp"
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            size_hint : (1, 1)
            BoxLayout:
                orientation:'vertical'
                size_hint_y: .9
                size_hint_x: .95
                size_hint_min_x: 250
                size_hint_min_y: 500
                size_hint_max_x: 525
                size_hint_max_y: 625
                spacing: 30
                MDCard:
                    elevation: .0
                    BoxLayout:
                        orientation:'vertical'
                        padding: 10
                        spacing: 30
                        MDLabel:
                            text:'Registrase'
                            font_style:"H5"
                            halign:'center'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color
                        ReplicableTextField:
                            id: name_input
                            size_hint_x: 1
                            write_tab: False
                            hint_text:'Your name'
                            max_text_length: 15


                        ReplicableTextField:
                            id: user_input
                            size_hint_x: 1
                            write_tab: False
                            hint_text:'Account name'
                            max_text_length: 15

                        ReplicableTextField:
                            id: password_input
                            size_hint_x: 1
                            write_tab: False
                            hint_text: "Password"
                            password:True
                            max_text_length: 15
                        ReplicableTextField:
                            id: second_password_input
                            size_hint_x: 1
                            write_tab: False
                            hint_text: "Repeat password"
                            password:True
                            max_text_length: 15
                        ReplicableTextField:
                            id: email_input
                            size_hint_x: 1
                            write_tab: False
                            hint_text: "Email"


                        MDRaisedButton:
                            text: 'Up'
                            size_hint_x : 1
                            on_press: root.to_create_account()

                        MDTextButton:
                            text: 'Sign in'
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            on_release:root.go_to_login()




